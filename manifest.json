{
  "manifest_version": 3,
  "name": "Formatador de Texto PJE",
  "version": "1.0",
  "description": "Extensão capaz de remover trechos indesejados, espaços duplicados e quebras de linha de textos copiados do PJE.",
  "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}